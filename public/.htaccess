<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /MyTechQuizer/
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /MyTechQuizer/index.html [L]
</IfModule>

# Cache Control Headers
<IfModule mod_headers.c>
  # HTML - Kein Cache
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # JavaScript und CSS - Langer Cache wegen Hash-Versionierung
  # Da Vite bereits Hash in Dateinamen einfügt, können wir lange cachen
  <FilesMatch "\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Bilder - Längerer Cache
  <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
    Header set Cache-Control "public, max-age=86400"
  </FilesMatch>

  # JSON - Kein Cache
  <FilesMatch "\.(json)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>

# Disable ETags
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None
